// prisma/schema.prisma

model User {
  id            String   @id @default(uuid())
  email         String   @unique
  password      String
  fullName      String?  // New
  role          String   @default("SPECTATOR") // TEAM_OWNER, ADMIN, PLAYER
  
  // Cricketer Specific Details
  playerRole    String?  // Batsman, Bowler, All-Rounder
  battingStyle  String?  // Right-hand, Left-hand
  bowlingStyle  String?  // Right-arm Fast, Leg Spin, etc.
  age           Int?
  matches       Int      @default(0)
  runs          Int      @default(0)
  wickets       Int      @default(0)
  
  teamId        String?
  team          Team?    @relation(fields: [teamId], references: [id])
  createdAt     DateTime @default(now())
}

